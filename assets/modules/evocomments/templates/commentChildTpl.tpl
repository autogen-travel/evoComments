<div data-evocomments-comment-id="[+id+]" id="evocomment_[+id+]">
    <div class="ec_comment ec_child_comment [+deleted+]">
        <div class="row align-items-center">
            <div class="col-auto">
                <div class="ec_avatar" style="background: url([+avatar+]) center / cover no-repeat;"></div>
            </div>
            <div class="col ml-auto ml-0 pl-0">
                <div class="ec_author">[+author+]</div>
                <div class="ec_date">
                    <time data-evocomments-updated="[+updated_at+]">[+date+]</time>
                </div>
            </div>
        </div>
        <div class="ec_content">
            <div class="ec_text mt-1">
                <a href="#" class="ec_reply_name" data-evocomments-parent-id="[+parent_id+]">[+reply_name+],</a> [+comment+]
            </div>
            <div class="ec_reply_wrapper">
                <a class="ec_reply_btn" href="#" data-evocomments-reply>Ответить</a>
            </div>
        </div>      
    </div>
</div>